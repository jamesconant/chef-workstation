PATH="$PATH:/opt:/opt/wine/bin:/sbin:/bin:/usr/sbin:/usr/bin:/usr/local/sbin:/usr/local/bin"

eval "$(rbenv init -)"

# SSH

{ eval `ssh-agent -s`; } &>/dev/null
{ ssh-add /home/<%= @user_name %>/.ssh/<%= @host_name %>_<%= @user_name %>_github_rsa; } &>/dev/null

# General

alias eb='vim ~/.bashrc'
alias sb='source ~/.bashrc'

# Terminal Formatting

if [ -n "$DISPLAY" ]; then
xset b off
fi

alias ls="ls --color"
case "$TERM" in
xterm*) XTITLE="\[\e]0;\w\a\]"
;;
rxvt*)  XTITLE="\[\e]0;\w\a\]"
;;
*)  XTITLE=""
;;
esac

git_prompt() {
local ref=$(git branch 2>/dev/null | sed -n '/\* /s///p')
if [ "$ref" != "" ]
then
echo "[$ref]"
fi
}

PS1="
\e[1m[\D{%F %I:%M:%S}][\u][@\H][\w]\$(git_prompt)\[\e[0m\]

âžœ "

PS1=$XTITLE"\u@\h $ "

# Git

source ~/.git_bash_completion
alias g="git"
alias gf="g fetch"
alias gs="g status"
alias gb="g branch"
alias gl="g log"
alias gp="git push"
alias gpm="gf && git pull origin master"
alias gcm="git checkout master"
alias grm="git rebase master"

# Bundler

alias b="bundle"
alias bu="b update"
alias be="b exec"
alias bi="b install --path vendor"
alias binit="bi && b package && echo 'vendor/**/*' >> .gitignore && echo '.idea/**/*' >> .gitignore && echo '.bundle/**/*' >> .gitignore"

# Chef
alias jdelb="rm /home/<%= @user_name %>/projects/chef-workstation/Berksfile.lock"
alias jdelc="rm -rf /home/<%= @user_name %>/projects/cookbooks"
alias jber="berks vendor -b /home/<%= @user_name %>/projects/chef-workstation/Berksfile /home/<%= @user_name %>/projects/cookbooks"
alias jche="sudo chef-client -c /home/<%= @user_name %>/projects/chef-workstation/client.rb"
alias cu="jber && jche -l error"
alias cudbg="jber && jche"
alias upcfg="jber && sudo chef-client -c /home/<%= @user_name %>/projects/chef-workstation/config_client.rb"

# Test Kitchen
alias kl="kitchen list"
alias kc="time kitchen create"
alias ko="time kitchen converge"
alias kv="time kitchen verify"
alias kt="time kitchen test"
alias ks="kitchen login"

# Wifi

alias wifi="wicd-curses"

# Misc

export QMAKE=/usr/bin/qmake-qt4
export BROWSER='/usr/bin/google-chrome --new-window'

# Rails General

alias s="be rails s"
alias c="be rails c"
alias m="be rake db:migrate"
alias t="time be rake test"
alias r="time be rspec"

# Contently

alias d="be bin/eb deploy"
alias cdb='git checkout -- db/structure.sql'
