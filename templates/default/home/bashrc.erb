PATH="$PATH:/opt:/opt/wine/bin:/sbin:/bin:/usr/sbin:/usr/bin:/usr/local/sbin:/usr/local/bin"

eval "$(rbenv init -)"

# SSH
eval `ssh-agent -s`
ssh-add /home/<%= @user_name %>/.ssh/<%= @host_name %>_<%= @user_name %>_github_rsa
ssh-add /home/<%= @user_name %>/.ssh/<%= @host_name %>_<%= @user_name %>_contently_github_rsa

# General

alias eb='vim ~/.bashrc'
alias sb='source ~/.bashrc'

# Terminal Formatting

if [ -n "$DISPLAY" ]; then
xset b off
fi

alias ls="ls --color"
case "$TERM" in
xterm*) XTITLE="\[\e]0;\w\a\]"
;;
rxvt*)  XTITLE="\[\e]0;\w\a\]"
;;
*)  XTITLE=""
;;
esac

PS1=$XTITLE"\u@\h $ "

# Git

source ~/.git_bash_completion
alias g="git"
alias gf="g fetch"
alias gs="g status"
alias gl="g log"
alias gp="git push"
alias gpm="gf && git pull origin master"
alias gcm="git checkout master"
alias grm="git rebase master"

# Bundler

alias b="bundle"
alias bu="b update"
alias be="b exec"
alias bi="b install --path vendor"
alias binit="bi && b package && echo 'vendor/**/*' >> .gitignore && echo '.idea/**/*' >> .gitignore && echo '.bundle/**/*' >> .gitignore"

# Chef
alias jdelb="rm /home/<%= @user_name %>/chef/chef-workstation/Berksfile.lock"
alias jdelc="rm -rf /home/<%= @user_name %>/chef/cookbooks"
alias jber="berks vendor -b /home/<%= @user_name %>/chef/chef-workstation/Berksfile /home/<%= @user_name %>/chef/cookbooks"
alias jche="sudo chef-client -c /home/<%= @user_name %>/chef/chef-workstation/client.rb"
alias cu="jber && jche"

# Test Kitchen
alias kl="be kitchen list"
alias kc="time be kitchen create"
alias ko="time be kitchen converge"
alias kv="time be kitchen verify"
alias kt="time be kitchen test"
alias ks="be kitchen login"

# Wifi

alias wifi="wicd-curses"

# Misc

export QMAKE=/usr/bin/qmake-qt4
export BROWSER='/usr/bin/google-chrome --new-window'

# Rails General

alias s="be rails s"
alias c="be rails c"
alias m="be rake db:migrate"
alias t="time be rake test"
alias r="time be rspec"

# Contently

alias d="be bin/eb deploy"
alias cdb='git checkout -- db/structure.sql'
