general {
  colors = true
  interval = 5
}

order += "disk /"
order += "run_watch VPN"

<%- if @likely_laptop %>
  order += "wireless _first_"
  order += "battery 0"
<%- end %>

order += "cpu_usage"
order += "tztime local"

disk "/" {
  format = "%avail"
}

run_watch VPN {
  pidfile = "/var/run/vpnc/pid"
}

wireless _first_ {
format_up = "W: (%quality at %essid) %ip"
format_down = "W: down"
}

battery 0 {
format = "%status %percentage %remaining"
}

cpu_usage {
  format = "%usage "
}

tztime local {
  format = "%Y-%m-%d %H:%M:%S"
}
