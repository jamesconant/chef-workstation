# 1. % memory used
# 2. each core % utilized, chart and current %
# 3. % disk space available
# 4. amt disk space availble - combine -> 412 GiB (68%)
# 5. Date -> 2018.05.25
# 6. Time -> 10:33:01 PM
# 7. VPN status ? - not yet
# 8. IP address ? - not yet


#
# Laptop
#


order += "disk /"
# order += "run_watch VPN"
order += "cpu_usage 0"
order += "cpu_usage 1"
order += "cpu_usage 2"
order += "cpu_usage 3"
order += "cpu_usage 4"
order += "cpu_usage 5"
order += "tztime local"

